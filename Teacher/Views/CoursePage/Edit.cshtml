@model Teacher.Models.Course

<div id="containershow">
    <nav>
        <a class="navlink" href="/CoursePage/Show/@Model.CourseId">Back</a>
    </nav>
    <h2>New Course</h2>
    <form method="POST" action="/CoursePage/Update/@Model.CourseId">
        <div class="inputrow">
            <label for="CourseCode">Course Code:</label>
            <input type="text" id="CourseCode" name="CourseCode" value="@Model.CourseCode" />

        </div>
        <div class="inputrow">
            <label for="TeacherId">Teacher ID:</label>
            <input type="text" id="TeacherId" name="TeacherId" value="@Model.TeacherId" />

        </div>
        <div class="inputrow">
            <label for="StartDate">Start Date:</label>
            <input type="text" id="StartDate" name="StartDate" value="@Model.StartDate" />
        </div>
        <div class="inputrow">
            <label for="FinishDate">Finish Date:</label>
            <input type="text" id="FinishDate" name="FinishDate" value="@Model.FinishDate" />
        </div>
        <div class="inputrow">
            <label for="CourseName">Course Name:</label>
            <input type="text" id="CourseName" name="CourseName" value="@Model.CourseName" />
        </div>

        <div class="inputrow">
            <input type="submit" value="Update Course" />
        </div>
    </form>
</div>