@model Teacher.Models.Student

<div id="containershow">
    <nav>
        <a class="navlink" href="/StudentPage/Show/@Model.StudentId">Cancel</a>
    </nav>
    <h2>Are you sure you want to delete @Model.StudentFirstName @Model.StudentLastName?</h2>
    <p>This action cannot be undone.</p>
    <form method="POST" action="/StudentPage/Delete/@Model.StudentId">
        <button class="btn-warning">
            Confirm Delete
        </button>
    </form>
</div>

