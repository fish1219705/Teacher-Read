<div id="containershow">
    <nav>
        <a class="navlink" href="/StudentPage/List">Back to Students</a>
    </nav>
    <h2>New Student</h2>
    <form method="POST" action="/StudentPage/Create">
        <div class="inputrow">
            <label for="StudentFirstName">First Name:</label>
            <input type="text" id="StudentFirstName" name="StudentFirstName" />

        </div>
        <div class="inputrow">
            <label for="StudentLastName">Last Name:</label>
            <input type="text" id="StudentLastName" name="StudentLastName" />

        </div>
        <div class="inputrow">
            <label for="StudentNumber">Student Number:</label>
            <input type="text" id="StudentNumber" name="StudentNumber" />

        </div>
        <div class="inputrow">
            <label for="EnrolDate">Enrol Date:</label>
            <input type="text" id="EnrolDate" name="EnrolDate" />

        </div>

        <div class="inputrow">
            <input type="submit" value="Create Student" />
        </div>

    </form>

</div>
